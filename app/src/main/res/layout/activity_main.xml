<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MINESWEEPER"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnReset"
            android:padding="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:text="00:00"
            android:textSize="20sp" />

    </LinearLayout>

    <com.example.minesweeper.MinesweeperView
        android:id="@+id/minesweeperView"
        android:layout_width="350dp"
        android:layout_height="350dp" />

    <ToggleButton
        android:id="@+id/interactionToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:textOff="Reveal"
        android:textOn="Flag"/> <!--text to be displayed whenever toggle button is checked-->

</LinearLayout>